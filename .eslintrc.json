{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "react-native/react-native": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-native"],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": true
      }
    ]
  }
}
